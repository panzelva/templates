{
  "name": "@trident/desktop",
  "version": "1.0.0",
  "main": "dist/electron.js",
  "private": true,
  "author": {
    "email": "panzelva@gmail.com",
    "name": "Lukas Fuchs"
  },
  "homepage": "",
  "devDependencies": {
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "concurrently": "^5.1.0",
    "electron": "^7.2.4",
    "electron-builder": "^22.4.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^3.2.0",
    "mkdirp": "^1.0.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "scripts": {
    "start": "concurrently \"yarn start:client\" \"yarn start:electron\" --kill-others",
    "start:client": "webpack-dev-server --port 8081 --config webpack.config.renderer.js",
    "start:electron": "yarn build:electron -d && NODE_ENV=development electron ./dist/electron.js",
    "build": "yarn clean && yarn build:prepare && yarn build:client -p && yarn build:electron -p",
    "build:client": "webpack --config webpack.config.renderer.js",
    "build:electron": "webpack --config webpack.config.main.js",
    "build:prepare": "mkdirp ./release/@trident",
    "compile": "yarn build && electron-builder --config electron-builder.yml",
    "production": "yarn build && electron ./dist/electron.js",
    "clean": "rimraf dist release",
    "lint": "eslint ./src --ext .js,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "format": "prettier src/**/*.{js,ts,tsx} --list-different",
    "format:fix": "yarn format --write"
  }
}
